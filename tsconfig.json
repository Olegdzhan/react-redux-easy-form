{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@lib/*": ["lib/*"]
    },
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "outDir": "types",
    "sourceMap": true,
    "target": "es2015"
  },
  "include": ["lib/**/*", "usage/**/*"]
}
